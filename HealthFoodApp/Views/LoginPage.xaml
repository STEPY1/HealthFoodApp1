                        <Image Source="email.png" 
                               HeightRequest="24" 
                               WidthRequest="24"
                               VerticalOptions="Center" />
                        <Entry Grid.Column="1" 
                               Placeholder="Email"
                               Text="{Binding Email}"
                               Keyboard="Email"
                               ReturnType="Next"
                               ClearButtonVisibility="WhileEditing"
